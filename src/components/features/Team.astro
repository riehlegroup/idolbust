---
export interface TeamMember {
  name: string;
  role: string;
  image?: string;
  bio?: string;
}

export interface Props {
  members: TeamMember[];
  title?: string;
}

const { members, title = 'Our Team' } = Astro.props;
---

<section class="py-12">
  <h2 class="mb-8 text-center text-2xl font-bold text-secondary-900">{title}</h2>
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    {members.map((member) => (
      <div class="flex flex-col items-center rounded-lg bg-secondary-50 p-6 text-center">
        <div class="mb-4 h-24 w-24 overflow-hidden rounded-full bg-secondary-200">
          {member.image ? (
            <img src={member.image} alt={member.name} class="h-full w-full object-cover" loading="lazy" />
          ) : (
            <div class="flex h-full w-full items-center justify-center text-2xl font-bold text-secondary-500">
              {member.name.charAt(0)}
            </div>
          )}
        </div>
        <h3 class="text-lg font-semibold text-secondary-900">{member.name}</h3>
        <p class="text-sm text-primary-600">{member.role}</p>
        {member.bio && <p class="mt-2 text-sm text-secondary-600">{member.bio}</p>}
      </div>
    ))}
  </div>
</section>
