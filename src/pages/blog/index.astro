---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Card } from '@/components';
import { getCollection, type CollectionEntry } from 'astro:content';

type BlogEntry = CollectionEntry<'blog'>;

const posts = (await getCollection('blog'))
  .filter((post: BlogEntry) => !post.data.draft)
  .sort((a: BlogEntry, b: BlogEntry) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title="Blog" description="Latest updates and insights from the Idol or Bust research project.">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="mb-8 text-4xl font-bold text-secondary-900">Blog</h1>
    
    {posts.length === 0 ? (
      <p class="text-secondary-600">No posts yet. Check back soon!</p>
    ) : (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post: BlogEntry) => (
          <Card
            title={post.data.title}
            description={post.data.description}
            href={`/blog/${post.id.replace(/\.(md|mdx)$/, '')}/`}
            image={post.data.image?.url}
            imageAlt={post.data.image?.alt}
          >
            <div class="mt-4 flex items-center gap-2 text-sm text-secondary-500">
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
              <span>Â·</span>
              <span>{post.data.author}</span>
            </div>
            {post.data.tags.length > 0 && (
              <div class="mt-3 flex flex-wrap gap-2">
                {post.data.tags.map((tag: string) => (
                  <span class="rounded-full bg-secondary-100 px-2 py-1 text-xs text-secondary-600">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </Card>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
